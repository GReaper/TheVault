<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >    

        <GridView
            android:id="@+id/grid_file_visualizer_lock"
            style="@style/PhotoGridLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/botonUnHide"
            android:columnWidth="@dimen/image_thumbnail_size"
            android:horizontalSpacing="@dimen/image_thumbnail_spacing"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/image_thumbnail_spacing" 
            android:background="#000000"
            >
        </GridView>

         <Button
             android:id="@+id/botonUnHide"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_alignParentLeft="true"
             android:text="@string/unhide" />

         <Button
             android:id="@+id/botonOcultar"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_below="@+id/grid_file_visualizer_lock"
             android:text="@string/hide" />
		
</RelativeLayout>